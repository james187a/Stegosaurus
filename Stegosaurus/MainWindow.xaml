        xmlns:local="clr-namespace:Stegosaurus"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="36,61,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" Height="32" Name="mainInput"/>
        <Button Content="Do Stuff" HorizontalAlignment="Left" Height="32" Margin="467,125,0,0" VerticalAlignment="Top" Width="114" Click="EnterText"/>
        <TextBlock HorizontalAlignment="Left" Height="32" Margin="488,61,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Width="162" Name="mainOutput"/>
        <Button Content="Select File" HorizontalAlignment="Left" Height="32" Margin="301,61,0,0" VerticalAlignment="Top" Width="99" Name="openFile" Click="SelectFile_Click"/>
        <Image HorizontalAlignment="Left" Height="269" Margin="36,104,0,0" VerticalAlignment="Top" Width="299" Name="imageField"/>

    </Grid>
</Window>
